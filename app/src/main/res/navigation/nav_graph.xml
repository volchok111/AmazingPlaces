<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.amazingplaces.ui.first.FirstFragment"
        android:label=""
        tools:layout="@layout/fragment_first" >
        <action
            android:id="@+id/action_firstFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.amazingplaces.ui.details.DetailsFragment"
        android:label=""
        tools:layout="@layout/fragment_details" >
        <action
            android:id="@+id/action_detailsFragment_to_firstFragment"
            app:destination="@id/firstFragment" />
    </fragment>
</navigation>